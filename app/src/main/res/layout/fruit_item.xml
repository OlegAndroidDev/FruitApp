<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="7dp"
    android:backgroundTint="@color/black"
    android:elevation="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fruit_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="2dp">

        <TextView
            android:id="@+id/fruit_item_text"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:padding="1dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fruit_ginus_value"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:textColor="@color/design_default_color_error"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/fruit_ginus_txt"
            app:layout_constraintTop_toBottomOf="@+id/fruit_item_text" />

        <TextView
            android:id="@+id/fruit_ginus_txt"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:text="@string/txt_genus"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fruit_item_text" />

        <TextView
            android:id="@+id/fruit_family_value"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:textColor="@color/design_default_color_error"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/fruit_family_txt"
            app:layout_constraintTop_toBottomOf="@+id/fruit_ginus_value" />

        <TextView
            android:id="@+id/fruit_family_txt"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="@string/txt_family"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fruit_ginus_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>